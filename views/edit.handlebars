<div class="container">
    <div class="row">
        <div class="col">
            <form id="editBlogPost">
                <input type="hidden" id="blogpostid" value="{{id}}" />
                <div class="form-group">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" id="title" value="{{title}}" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="blogcontent">Blog</label>
                    <textarea class="form-control" id="blogcontent" rows="10">{{blog_content}}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Save Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/edithandler.js"></script>