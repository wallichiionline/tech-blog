<div class="container">
    <div class="row">
        <div class="col">
            <h2>{{title}}</h2>
            <p>By {{user.name}} on {{format_date date_created}}</p>
            <p>{{blog_content}}</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h3>Comments</h3>
            {{#each comments as |comment|}}
            <div class="comment">
                <p>{{comment.content}}</p>
                <p>By {{comment.user.name}} on {{format_date comment.date_created}}</p>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form id="comment-form">
                <input type="hidden" value="{{id}}" id="blogpostid"/>
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea class="form-control" id="comment" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/comhandler.js"></script>